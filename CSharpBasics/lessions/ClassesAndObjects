//Visibility/Protection Level - Access Modifiers
//Private, internal, protected, public
class Person
{
    //Members : Fileds, Methods here firstName etc are 4 fields
    internal string firstName; //by default it is private but we can make it public
     internal string lastName;
    internal byte age;
    internal bool isFemale;

    internal void SpeakLanguage()
        {
Console.WriteLine(firstName + "speaks english.");
        }
    

}
//we should always start method with verb, void speak()etc.
class Test
{
    void Do()
    {
        //Create object /Instantiate / Create Instance
        Person sangam = new (); // if var sangam = new Person();

        //Set sangam's (object) data
        sangam.firstName = "Sangam";
        sangam.lastName = "Neupane";
        sangam.age = 23;
        sangam.isFemale = false;
            //Create object /Instantiate / Create Instance
        Person susan = new ()
        {
            firstName= "Susan",
            lastName = "Neupane",
            age = 23,
             isFemale = true
    
        };

        //call object method
        sangam.SpeakLanguage();

    }

}
